<!DOCTYPE html><html lang="en"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartCalc Pro | All-in-One Calculator</title>
    <link rel="stylesheet" href="https://vchats.ct.ws/uploads/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <i class="fas fa-calculator"></i>
                <h1>SmartCalc Pro</h1>
            </div>
            <div class="theme-toggle">
                <button id="themeToggle">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </header>

        <!-- Mode Selector -->
        <div class="mode-selector">
            <button class="mode-btn active" data-mode="basic">Basic</button>
            <button class="mode-btn" data-mode="scientific">Scientific</button>
            <button class="mode-btn" data-mode="gst">GST</button>
            <button class="mode-btn" data-mode="finance">Finance</button>
            <button class="mode-btn" data-mode="converter">Converter</button>
        </div>

        <!-- Main Calculator Area -->
        <div class="calculator-container">
            <!-- Display Area -->
            <div class="display-container">
                <div class="calculation-display" id="calculationDisplay"></div>
                <div class="result-display" id="resultDisplay">0</div>
                <div class="memory-indicator" id="memoryIndicator">
                    <i class="fas fa-memory"></i> M: 0
                </div>
            </div>

            <!-- Basic Calculator (Default) -->
            <div class="calculator basic-calc active" id="basicCalc">
                <div class="calculator-grid">
                    <!-- Row 1 -->
                    <button class="calc-btn memory-btn" data-action="mc">MC</button>
                    <button class="calc-btn memory-btn" data-action="mr">MR</button>
                    <button class="calc-btn memory-btn" data-action="m+">M+</button>
                    <button class="calc-btn memory-btn" data-action="m-">M-</button>
                    <button class="calc-btn operator" data-action="/">/</button>
                    
                    <!-- Row 2 -->
                    <button class="calc-btn" data-number="7">7</button>
                    <button class="calc-btn" data-number="8">8</button>
                    <button class="calc-btn" data-number="9">9</button>
                    <button class="calc-btn operator" data-action="*">×</button>
                    <button class="calc-btn" data-action="percent">%</button>
                    
                    <!-- Row 3 -->
                    <button class="calc-btn" data-number="4">4</button>
                    <button class="calc-btn" data-number="5">5</button>
                    <button class="calc-btn" data-number="6">6</button>
                    <button class="calc-btn operator" data-action="-">-</button>
                    <button class="calc-btn" data-action="sqrt">√</button>
                    
                    <!-- Row 4 -->
                    <button class="calc-btn" data-number="1">1</button>
                    <button class="calc-btn" data-number="2">2</button>
                    <button class="calc-btn" data-number="3">3</button>
                    <button class="calc-btn operator" data-action="+">+</button>
                    <button class="calc-btn" data-action="square">x²</button>
                    
                    <!-- Row 5 -->
                    <button class="calc-btn" data-action="clear">C</button>
                    <button class="calc-btn" data-number="0">0</button>
                    <button class="calc-btn" data-action="decimal">.</button>
                    <button class="calc-btn equals" data-action="equals">=</button>
                    <button class="calc-btn" data-action="backspace">
                        <i class="fas fa-backspace"></i>
                    </button>
                </div>
            </div>

            <!-- GST Calculator -->
            <div class="calculator gst-calc" id="gstCalc">
                <div class="gst-container">
                    <div class="input-group">
                        <label for="amount">Amount (₹)</label>
                        <input type="number" id="amount" placeholder="Enter amount" value="1000">
                    </div>
                    
                    <div class="input-group">
                        <label for="gstRate">GST Rate (%)</label>
                        <div class="rate-buttons">
                            <button class="rate-btn" data-rate="5">5%</button>
                            <button class="rate-btn" data-rate="12">12%</button>
                            <button class="rate-btn active" data-rate="18">18%</button>
                            <button class="rate-btn" data-rate="28">28%</button>
                            <input type="number" id="customRate" placeholder="Custom" min="0" max="100">
                        </div>
                    </div>
                    
                    <div class="gst-results">
                        <div class="result-item">
                            <span>Base Amount:</span>
                            <span id="baseAmount">₹1,000.00</span>
                        </div>
                        <div class="result-item">
                            <span>GST Amount:</span>
                            <span id="gstAmount">₹180.00</span>
                        </div>
                        <div class="result-item total">
                            <span>Total Amount:</span>
                            <span id="totalAmount">₹1,180.00</span>
                        </div>
                        <div class="result-item split">
                            <span>CGST (9%):</span>
                            <span id="cgstAmount">₹90.00</span>
                        </div>
                        <div class="result-item split">
                            <span>SGST (9%):</span>
                            <span id="sgstAmount">₹90.00</span>
                        </div>
                    </div>
                    
                    <button class="calculate-btn" id="calculateGST">Calculate GST</button>
                    <button class="reset-btn" id="resetGST">Reset</button>
                </div>
            </div>

            <!-- Finance Calculator -->
            <div class="calculator finance-calc" id="financeCalc">
                <div class="finance-container">
                    <div class="finance-tabs">
                        <button class="finance-tab active" data-finance="emi">EMI</button>
                        <button class="finance-tab" data-finance="interest">Interest</button>
                        <button class="finance-tab" data-finance="discount">Discount</button>
                    </div>
                    
                    <!-- EMI Calculator -->
                    <div class="finance-content emi-calc active" id="emiCalc">
                        <div class="input-group">
                            <label for="loanAmount">Loan Amount (₹)</label>
                            <input type="number" id="loanAmount" placeholder="e.g., 500000" value="500000">
                        </div>
                        
                        <div class="input-group">
                            <label for="interestRate">Interest Rate (%)</label>
                            <input type="number" id="interestRate" placeholder="e.g., 8.5" value="8.5" step="0.1">
                        </div>
                        
                        <div class="input-group">
                            <label for="loanTenure">Loan Tenure (Months)</label>
                            <input type="number" id="loanTenure" placeholder="e.g., 60" value="60">
                        </div>
                        
                        <div class="emi-results">
                            <div class="result-item">
                                <span>Monthly EMI:</span>
                                <span id="monthlyEMI">₹10,260.10</span>
                            </div>
                            <div class="result-item">
                                <span>Total Interest:</span>
                                <span id="totalInterest">₹115,606.00</span>
                            </div>
                            <div class="result-item total">
                                <span>Total Payment:</span>
                                <span id="totalPayment">₹615,606.00</span>
                            </div>
                        </div>
                        
                        <button class="calculate-btn" id="calculateEMI">Calculate EMI</button>
                    </div>
                    
                    <!-- Discount Calculator -->
                    <div class="finance-content discount-calc" id="discountCalc">
                        <div class="input-group">
                            <label for="originalPrice">Original Price (₹)</label>
                            <input type="number" id="originalPrice" placeholder="e.g., 1000" value="1000">
                        </div>
                        
                        <div class="input-group">
                            <label for="discountPercent">Discount Percentage (%)</label>
                            <input type="number" id="discountPercent" placeholder="e.g., 20" value="20">
                        </div>
                        
                        <div class="discount-results">
                            <div class="result-item">
                                <span>Discount Amount:</span>
                                <span id="discountAmount">₹200.00</span>
                            </div>
                            <div class="result-item total">
                                <span>Final Price:</span>
                                <span id="finalPrice">₹800.00</span>
                            </div>
                            <div class="result-item">
                                <span>You Save:</span>
                                <span id="youSave" class="save">₹200.00</span>
                            </div>
                        </div>
                        
                        <button class="calculate-btn" id="calculateDiscount">Calculate Discount</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- History Panel -->
        <div class="history-panel">
            <div class="history-header">
                <h3><i class="fas fa-history"></i> Calculation History</h3>
                <button id="clearHistory">
                    <i class="fas fa-trash"></i> Clear
                </button>
            </div>
            <div class="history-list" id="historyList">
                <!-- History items will be added here dynamically -->
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-content">
                <p>© 2024 SmartCalc Pro | All-in-One Calculator</p>
                <div class="footer-links">
                    <button id="copyScript">
                        <i class="fas fa-code"></i> Copy Code
                    </button>
                    <button id="exportHistory">
                        <i class="fas fa-download"></i> Export
                    </button>
                    <button id="printCalc">
                        <i class="fas fa-print"></i> Print
                    </button>
                </div>
            </div>
        </footer>
    </div>

    <!-- Notification -->
    <div class="notification" id="notification">
        <span id="notificationText">Copied to clipboard!</span>
    </div>

    <script src="script.js"></script>

</body></html>

